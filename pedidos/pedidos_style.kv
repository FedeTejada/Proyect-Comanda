<RoundedButton>:
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.border_radius]

<TotalButton>:
    background_color: 0, 0.5, 1, 1

<CarritoButton>:
    background_color: 0.5, 0, 0, 1
